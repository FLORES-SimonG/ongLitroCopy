---
import { Image } from "astro:assets";
import AsideMenuDasboard from "../../components/AsideMenuDasboard/AsideMenuDasboard.astro";
import ButtonCTASmall from "../../components/Buttons/ButtonCTASmall.astro";
import ButtonPrimarySmall from "../../components/Buttons/ButtonPrimarySmall.astro";
import DasboardLayouts from "../../layouts/DasboardLayouts.astro";
import vectorIcon from "../../assets/vectorIcon.svg"
import {getNews} from "../../helpers/getNews";
import iconNews from "../../assets/logoOG.png"
import ButtonWarningSmall from "../../components/Buttons/ButtonWarningSmall.astro"
import { deleteNews } from "../../helpers/deleteNews";
const news: { UrlImage: string; title: string; subtitle: string; date: string; location: string; href: string, id:number}[] = await getNews();
console.log(news);

---
<DasboardLayouts title="DashboardAdmin - Un Litro Alta Gracia.">
    <div class="flex flex-row h-screen bg-secondary">
        <div class="w-1/3 h-full pl-14 py-10">
            <AsideMenuDasboard><h3 class="text-3xl font-medium text-tertiary">Menu de Control</h3></AsideMenuDasboard>
        </div>
        <div class="2-m h-full  w-full px-14 py-10 flex flex-col ">
            <div class="shadown-3xl rounded-xl bg-textPrimary shadow-3xl p-10 h-5/6 flex flex-col justify-between">
                <h4 class="text-2xl font-medium text-tertiary mb-10 w-full text-end ">Seccion Noticias</h4>
                {!news &&
                    <p class="text-tertiary w-full text-center text-3xl">No hay noticias disponibles por ahora.</p>
                }
                {news &&
                    <ul class="overflow-auto max-h-[calc(100vh-120px)]">
                        {Array.isArray(news) && news.map(({UrlImage, title, subtitle, date, location, id}) =>
                            <li class="flex flex-row flex-nowrap justify-between pr-10 items-center">
                                <a class="flex flex-row justify-between p-10 items-center text-sm w-full" id={`card${id}`} href={`/dashboardAdmin/${title}`}>
                                    <div class="flex">
                                        <Image src={iconNews} alt={title} class="w-20 h-20 rounded-full object-cover mr-4"/>
                                        <div>
                                            <h6 class="text-tertiary text-base font-semibold">{title}</h6>
                                            <p>{subtitle}</p>
                                            <p>{date}</p>
                                        </div>
                                    </div>
                                    <div>
                                        <p>{location}</p>
                                    </div>
                                    <Image src={vectorIcon} alt="icono de vector"/>
                                </a>
                                <div class="w-40 flex justify-center">
                                <div role="status"  id={`spinner-${id}`} class="spinner " style="display: none;">
                                    <svg aria-hidden="true" class="w-8 h-8 text-gray-200 animate-spin dark:text-gray-600 fill-warningText" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
                                    <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
                                    </svg>
                                    <span class="sr-only">Loading...</span>
                                </div>

                                    <ButtonWarningSmall title="Eliminar" idEvent={`delete-${id}`}/>
                                </div>   
                            </li>
                                <hr/>
                
                        )}
                    </ul>
                }
                
                <div class="w-full flex justify-center">
                    <a href="/dashboardAdmin/newsCreate"><ButtonCTASmall title="Agregar Noticia"/></a>
                </div>
            </div>
            <div class="w-full flex justify-center mt-6">
                <a href="/dashboardAdmin/volunteers"><ButtonPrimarySmall title="Siguiente"/></a>
            </div>
        </div>
    </div>
</DasboardLayouts>

<script>

import { deleteNews } from "../../helpers/deleteNews";
    document.addEventListener('DOMContentLoaded', () => {
        const buttons = document.querySelectorAll('button[id^="delete-"]');
        buttons.forEach(button => {
            button.addEventListener('click', async (e) => {
                const id = button.id.replace('delete-', '');
                await onClic(id);
            });
        });
    });

    async function onClic(id: any) {
    console.log('Eliminando noticia con ID:', id);
    deleteNews(id);
    const button = document.getElementById(`delete-${id}`);
    const spinner = document.getElementById(`spinner-${id}`);
    if (spinner) {
        spinner.style.display = 'block';
    }
    if (button) {
            button.style.display = 'none';
        }
    setTimeout(() => {
        const spinner = document.getElementById(`spinner-${id}`);
        if (spinner) {
            spinner.style.display = 'none';
        }
        
        location.reload();
    }, 1000);
}
</script>